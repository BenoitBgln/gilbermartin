php_value display_errors 1
# DO NOT REMOVE OR MODIFY THIS LINE AND THE LINES ABOVE HTID:16962957:

ErrorDocument 404 http://gilbertmartin-peintre.fr/erreur
ErrorDocument 403 http://gilbertmartin-peintre.fr

Options -Indexes

RedirectPermanent /pages/l-artiste.html /l-artiste
RedirectPermanent /pages/series.html /series

<IfModule mod_expires.c>
 ExpiresActive on
 ExpiresDefault 								"access plus 6 months"
 ExpiresByType image/x-icon 					"access plus 6 months"
 ExpiresByType image/ico 						"access plus 6 months"
 ExpiresByType image/icon 						"access plus 6 months"
 ExpiresByType image/gif 						"access plus 6 months"
 ExpiresByType image/png 						"access plus 1 week"
 ExpiresByType image/jpg 						"access plus 1 week"
 ExpiresByType image/jpeg 						"access plus 1 week"
 
 ExpiresByType video/mp4 						"access plus 1 month"
 ExpiresByType video/webm 						"access plus 1 month"
 ExpiresByType video/ogg 						"access plus 1 month"

 ExpiresByType text/html 				       	"access plus 1 day"
 ExpiresByType text/css 					    "access plus 1 week"
 ExpiresByType text/javascript 					"access plus 1 week"
 ExpiresByType text/js 							"access plus 1 week"
 
 ExpiresByType font/opentype					"access plus 6 months"
 ExpiresByType font/truetype 					"access plus 6 months"
 ExpiresByType font/woff2						"access plus 6 months"
 ExpiresByType font/svg							"access plus 6 months"
 ExpiresByType font/eot							"access plus 6 months"
</IfModule>


RewriteEngine On
RewriteCond %{HTTPS} on [OR]
RewriteCond %{HTTP_HOST} ^www.gilbertmartin-peintre\.fr [NC]
RewriteRule ^(.*)$ http://gilbertmartin-peintre.fr/$1 [L,NE,R=301]

RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^([^\.]+)$ $1.html [NC,L]


<IfModule mod_headers.c>
	<FilesMatch "\.(js|css|gif|jpg|jpeg|png|ico)$">
	Header set vary  "Accept-Encoding"
	</FilesMatch>
	Header always append X-Frame-Options SAMEORIGIN
	Header always set X-Content-Type-Options "nosniff"
	Header always set X-XSS-Protection "1; mode=block"
</IfModule>






